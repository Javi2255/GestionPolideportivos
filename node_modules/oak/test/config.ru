# Quick and dirty rack app for local routing
require "rack"
require "sprockets"

map "/js" do
  environment = Sprockets::Environment.new
  environment.append_path '../src/'
  run environment
end

map "/css" do
  environment = Sprockets::Environment.new
  environment.append_path 'css'
  run environment
end

map "/img" do
  environment = Sprockets::Environment.new
  environment.append_path 'img'
  run environment
end

map "/" do
  environment = Sprockets::Environment.new
  environment.append_path '.'
  run environment
end


